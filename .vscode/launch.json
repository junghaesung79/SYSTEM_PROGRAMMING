{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${fileBasenameNoExtension}",
      "args": ["<", "input.txt"],  // 입력 파일을 사용하도록 설정
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb",
      "miDebuggerPath": "/usr/bin/lldb",  // lldb 경로
      "setupCommands": [
        {
          "description": "Enable pretty-printing for lldb",
          "text": "settings set target.prefer-dynamic-value run-target",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "build"
    }
  ]
}
